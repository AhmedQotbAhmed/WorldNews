<!--run-->
    <TextView
        android:padding="10dp"

        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_gravity="center"
        android:text="hello"
        android:textSize="14sp" />
</LinearLayout>